apiVersion: batch/v1
kind: Job
metadata:
  name: TESTTYPE
spec:
  ttlSecondsAfterFinished: 10
  template:
    spec:
      restartPolicy: Never
      containers:
      - name: TESTTYPE
        image: RAFIKITESTIMAGE
        volumeMounts:
        - mountPath: DOCKER_WORKDIR_PATH_V/LOGS_DIR_PATH_V
          name: log-dir
        env:
        - name: SUPERADMIN_PASSWORD
          value: SUPERADMIN_PASSWORD_V
        - name: RAFIKI_ADDR
          value: RAFIKI_ADDR_V
        - name: KAFKA_HOST
          value: KAFKA_HOST_V
        - name: KAFKA_PORT
          value: "KAFKA_PORT_V"
        - name: DOCKER_WORKDIR_PATH
          value: DOCKER_WORKDIR_PATH_V
        - name: LOGS_DIR_PATH
          value: LOGS_DIR_PATH_V
        command: CMD
      volumes:
      - name: log-dir
        hostPath: 
          path: HOST_WORKDIR_PATH/LOGS_DIR_PATH_V
  backoffLimit: 3
